<%= render 'homescreen/blocks/header', title: t('label_my_account') %>

<ul class="widget-box--arrow-links">
  <li>
    <%= link_to t(:'js.my_page.label'), my_page_path,
                title: t(:'js.my_page.label') %>
  </li>
  <li>
    <%= link_to t(:label_my_activity), { controller: "/users", action: "show", id: "me" },
                title: t(:'js.my_page.label') %>
  </li>
  <li>
    <%= link_to t(:label_profile), my_account_path, title: t(:label_profile) %>
  </li>
  <% login_via_provider = !!current_user.identity_url %>
  <% login_via_ldap = !!current_user.ldap_auth_source_id %>
  <% unless login_via_ldap || login_via_provider %>
    <li>
      <%= link_to t(:button_change_password), my_password_path, title: t(:button_change_password) %>
    </li>
  <% end %>
</ul>

<p class="widget-box--additional-info"><%= t('label_labour_tracking') %></p>

<ul class="widget-box--arrow-links">
  <li>
    <%= link_to t(:label_th_keyin), th_keyin_path, title: t(:label_th_keyin) %>
  </li>
  <li>
    <%= link_to t(:label_th_keyin_check), 'https://ith-workspace.thape.com.cn/worktime/', title: t(:label_th_keyin_check), target: '_ith' %>
  </li>
  <li>
    <%= link_to t(:label_th_keyin_report), 'https://cybros.thape.com.cn/report/subsidiary_working_hours', title: t(:label_th_keyin_report), target: '_cybros' %>
  </li>
</ul>
